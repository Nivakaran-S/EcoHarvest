# ========================================
# EcoHarvest Environment Configuration
# ========================================

# Node Environment
NODE_ENV=development

# ========================================
# Service Ports
# ========================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
CART_SERVICE_PORT=3005
PAYMENT_SERVICE_PORT=3006
VENDOR_SERVICE_PORT=3007
NOTIFICATION_SERVICE_PORT=3008
ADMIN_SERVICE_PORT=3009
REVIEW_SERVICE_PORT=3010
SEARCH_SERVICE_PORT=3011

# ========================================
# MongoDB Configuration
# ========================================
MONGODB_URI=mongodb://localhost:27017/ecoharvest
MONGODB_USER=
MONGODB_PASSWORD=

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# RabbitMQ Configuration
# ========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# Cookie Configuration
# ========================================
COOKIE_SECRET=your-cookie-secret-key

# ========================================
# Frontend URL (for CORS)
# ========================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# Email Configuration (SendGrid/SMTP)
# ========================================
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@ecoharvest.com

# ========================================
# SMS Configuration (Twilio) - Optional
# ========================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Cloud Storage (Cloudinary)
# ========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# Elasticsearch Configuration
# ========================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Logging
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ========================================
# Payment Gateway (Mock)
# ========================================
PAYMENT_GATEWAY=mock
PAYMENT_WEBHOOK_SECRET=whsec_mock_secret

# ========================================
# Monitoring
# ========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3100
